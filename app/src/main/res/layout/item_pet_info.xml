<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="5dp"

    android:id="@+id/cardViewPetInfo">


    <LinearLayout
        android:id="@+id/editTextContainer"
        android:layout_width="369dp"
        android:layout_height="552dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/baseline_pets_24"
                android:text="  Pet's Information"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/saveButton1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#E91E63"
                android:text="Save"
                android:visibility="invisible" />

            <Button
                android:id="@+id/EditButton"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#E91E63"
                android:drawableTop="@drawable/baseline_mode_edit_outline_24"
                android:paddingLeft="20dp"
                android:text="Button" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="473dp"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="171dp"
                    android:layout_height="109dp"
                    android:orientation="vertical"
                    android:padding="3dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"

                        android:gravity="center"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/PetName"
                        style="@style/EditTextAsTextView"
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="text"
                        android:hint="Lucy" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="179dp"
                    android:layout_height="106dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"

                        android:gravity="center"
                        android:text="Gender"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/PetGender"
                        style="@style/EditTextAsTextView"
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="text"
                        android:text="Female" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="171dp"
                    android:layout_height="97dp"
                    android:orientation="vertical"
                    android:padding="3dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:text="Age"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/PetAge"
                        style="@style/EditTextAsTextView"
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="text"
                        android:text="3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="179dp"
                    android:layout_height="96dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"

                        android:gravity="center"
                        android:text="Color"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/PetColor"
                        style="@style/EditTextAsTextView"
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="text"
                        android:text="Brown" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="96dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="96dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"

                        android:gravity="center"
                        android:text="species"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/petSpecies"
                        style="@style/EditTextAsTextView"
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="text"
                        android:text="cat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="96dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"

                        android:gravity="center"
                        android:text="Type"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/PetType"
                        style="@style/EditTextAsTextView"
                        android:layout_width="116dp"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="text"
                        android:text="Brown" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="369dp"
                android:layout_height="133dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="357dp"
                    android:layout_height="113dp"
                    android:orientation="vertical"
                    android:padding="3dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"

                        android:gravity="center"
                        android:text="Additional  Information"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/PetAdditionalInfo"
                        style="@style/EditTextAsTextView"
                        android:layout_width="348dp"
                        android:layout_height="58dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="left"
                        android:inputType="textMultiLine"
                        android:text="lucy is allergic to tuna and milk. lucy is shy but friendly" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>