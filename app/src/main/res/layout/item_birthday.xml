<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="81dp"
                android:layout_height="39dp"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:gravity="center"
                android:text="Date of Birth"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dateOfBirthText"
                style="@style/EditTextAsTextView"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint=""
                android:inputType="date"
                android:minHeight="48dp"
                android:textSize="15dp"
                card_view:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:layout_width="81dp"
                android:layout_height="39dp"

                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/baseline_person_2_24"
                android:gravity="center|left"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

                <EditText
                android:id="@+id/editTextGender"
                style="@style/EditTextAsTextView"
                android:layout_width="87dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Female"

                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>