    <style name="EditTextAsTextView" parent="Widget.AppCompat.EditText">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:inputType">text</item> <!-- Disable text input -->
        <item name="android:clickable">true</item> <!-- Disable click events -->
        <item name="android:focusable">true</item> <!-- Disable focus -->
        <item name="android:textColor">@android:color/black</item> <!-- Customize text color -->
        <item name="android:textSize">16sp</item> <!-- Customize text size -->
        <item name="android:colorControlActivated">#000000</item>
        <!-- Add other custom attributes as needed -->
    </style>

    <style name="EditNameAsTextView" parent="Widget.AppCompat.EditText">
